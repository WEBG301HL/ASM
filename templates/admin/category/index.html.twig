
{% extends "admin/index.html.twig" %}
{% block title %}
    Admin Page - Product
{% endblock %}
{% block body %}
<div class="container-xxl flex-grow-1 container-p-y">
<div class="container-xl">
	<div class="table-responsive">
		<div class="table-wrapper">
			<div class="table-title">
				<div class="row">
					<div class="col-sm-6">
						<h2> Manager Category </h2>
					</div>
					<div class="col-sm-6">
						<a href="{{ path('category_add') }}" class="btn btn-success" data-toggle="modal"><i class="fa-solid fa-plus"></i><span>Add New Category</span></a>
						<a href="{{ path('category_sort') }}" class="btn btn-danger" data-toggle="modal"><i class="fa-solid fa-arrow-down-a-z"></i><span>Sort by Name</span></a>						
					</div>
				</div>
			</div>
			<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th>ID</th>
						<th>Name</th>
                        <th>Actions</th>
					</tr>
				</thead>  
                {% for a in category %}
				<tbody>
					<tr>
						<td>{{a.id}}</td>
						<td>{{a.catname}}</td>
						<td>
							<a href="{{path('category_edit',{"id":a.id})}}" class="edit" data-toggle="modal"><i class="fa-solid fa-user-pen" title="Edit"></i></a>
							<a href="{{path('category_delete',{"id":a.id})}}" class="delete" data-toggle="modal"><i class="fa-solid fa-trash-can" title="Delete"></i></a>
						</td>
				
				</tbody>	</tr> {% endfor %}
			</table>
			
		</div>
	</div>        
</div>
{% endblock %}