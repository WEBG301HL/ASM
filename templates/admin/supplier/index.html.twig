
{% extends "admin/index.html.twig" %}
{% block title %}
    Admin Page - Supplier
{% endblock %}
{% block body %}
<div class="container-xxl flex-grow-1 container-p-y">
<div class="container-xl">
	<div class="table-responsive">
		<div class="table-wrapper">
			<div class="table-title">
				<div class="row">
					<div class="col-sm-6">
						<h2> Manager Supplier </h2>
					</div>
					<div class="col-sm-6">
						<a href="{{ path('supplier_add') }}" class="btn btn-success" data-toggle="modal"><i class="fa-solid fa-plus"></i><span>Add New Supplier</span></a>			
					</div>
				</div>
			</div>
			<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th>ID</th>
						<th>Name</th>
                        <th>Address</th>
                        <th>Actions</th>
					</tr>
				</thead>  
                {% for a in supplier %}
				<tbody>
					<tr>
						<td>{{a.id}}</td>
						<td>{{a.supname}}</td>
                        <td>{{a.address}}</td>

						<td>
							<a href="{{ path('supplier_edit', {'id':a.id}) }}" class="edit" data-toggle="modal"><i class="fa-solid fa-user-pen" title="Edit"></i></a>
							<a href="{{ path('supplier_delete', {'id':a.id}) }}" class="delete" data-toggle="modal"><i class="fa-solid fa-trash-can" title="Delete"></i></a> 
						</td>
				
				</tbody>	</tr> {% endfor %}
			</table>
			
		</div>
	</div>        
</div>
{% endblock %}