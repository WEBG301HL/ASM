{% extends "admin/index.html.twig" %}
{% block title %}
    Admin Page - Product
{% endblock %}
{% block body %}
<div class="container-xxl flex-grow-1 container-p-y">
<div class="container-xl">
	<div class="table-responsive">
		<div class="table-wrapper">
			<div class="table-title">
				<div class="row">
					<div class="col-sm-6">
						<h2> Manager Product </h2>
					</div>
					<div class="col-sm-6">
						<a href="{{ path('product_add') }}" class="btn btn-success" data-toggle="modal"><i class="fa-solid fa-plus"></i><span>Add New Product</span></a>
						<a href="" class="btn btn-danger" data-toggle="modal"><i class="fa-regular fa-trash-can"></i><span>Delete</span></a>						
					</div>
				</div>
			</div>
			<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th>ID</th>
						<th>Name</th>
						<th>Price</th>
						<th>Image</th>
						<th>Quantity</th>
                        <th>Actions</th>
					</tr>
				</thead>  
                {% for a in products %}
				<tbody>
					<tr>
						<td>{{a.id}}</td>
						<td>{{a.name}}</td>
						<td>{{a.price}}</td>
                        {% set img = a.image %}
						<td><img style="height: 100;width: 140px;border-radius: 50px" src="{{asset('uploads/'~img)}}" ></td>
                        <td>{{a.quantity}}</td>
						<td>
							<a href="{{ path('product_edit', {'id':a.id}) }}" class="edit" data-toggle="modal"><i class="fa-solid fa-user-pen" title="Edit"></i></a>
							<a href="" class="delete" data-toggle="modal"><i class="fa-solid fa-trash-can" title="Delete"></i></a>
						</td>
				
				</tbody>	</tr> {% endfor %}
			</table>
			
		</div>
	</div>        
</div>
{% endblock %}
