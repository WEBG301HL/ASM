{% extends "admin/index.html.twig" %}
{% block title %}
    Admin Page - Account
{% endblock %}
{% block body %}
<div class="container-xxl flex-grow-1 container-p-y">
<div class="container-xl">
	<div class="table-responsive">
		<div class="table-wrapper">
			<div class="table-title">
				<div class="row">
					<div class="col-sm-6">
						<h2> Manager Account </h2>
					</div>
					<div class="col-sm-6">
						{# <a href="" class="btn btn-success" data-toggle="modal"><i class="fa-solid fa-plus"></i><span>Add New Employee</span></a> #}
						<a href="#deleteEmployeeModal" class="btn btn-danger" data-toggle="modal"><i class="fa-regular fa-trash-can"></i><span>Delete All</span></a>						
					</div>
				</div>
			</div>
			<table class="table table-striped table-hover">
      
				<thead>
					<tr>
						<th>ID</th>
						<th>Name</th>
						<th>Email</th>
						<th>Address</th>
						<th>Actions</th>
					</tr>
				</thead>  
        {% for a in accounts %}
				<tbody>
					<tr>
						<td>{{a.id}}</td>
						<td>{{a.name}}</td>
						<td>{{a.email}}</td>
						<td>{{a.address}}</td>
						<td>
							<a href="{{ path('account_delete', {'id':a.id}) }}" class="delete" data-toggle="modal"><i class="fa-solid fa-trash-can" title="Delete"></i></a>
						</td>
				
				</tbody>	</tr> {% endfor %}
			</table>
		</div>
	</div>        
</div>
                {% endblock %}
